<% @messages.each do |message| %>


<div class="col-md-4">
		<div class="panel panel-default">
			<div class="panel-heading">
				<b><%= truncate(message.title) %></b>
			</div>
				<div class="panel-body">
					<p class="message-desc"><%= truncate(message.description) %></p>
					<p class="message-posted-by"><b>Posted: </b><%= time_ago_in_words(message.created_at) %> ago</p>
				</div>
				<div class="panel-footer">
					<%= link_to "View Ad",message_path(message)%>
				</div>
		</div>
</div>
	

<% end %>

