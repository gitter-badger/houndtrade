<!DOCTYPE html>
<html>
<head>
  <title>Hound Trade</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<!-- Begin Navigation Bar --> 
<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header>
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="http://www.houndtrade.com">HoundTrade</a>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav">
        <li><%= link_to "Home", root_path %></li>
       <!-- <li><%= link_to "Articles", articles_path %></li>-->
        <li class="dropdown">
        </li>
        <li><%= link_to "About", static_pages_about_path %> </li>
        <li><%= link_to "Contact", static_pages_contact_path %> </li>
      </ul>
      <% if user_signed_in? %>
      <ul class="nav navbar-nav navbar-right">
      	<li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
    <!-- <li><%= link_to 'New article', new_article_path %></li> -->
        <li><%= link_to "New Ad", new_message_path %></li>
        
        <% else %>
        </ul>
      	<ul class="nav navbar-nav navbar-right">
	        <li><%= link_to "Sign Up", new_user_registration_path %></li>
	 		<li><%= link_to "Login", new_user_session_path  %></li>
        </ul>
    <% end %>
    </div>
  </div>
</nav>
<!-- End Navigation Bar --> 

	
	<div class="jumbotron">
		<h1>Hound Trade</h1>
		<p>Buy, Sale, and Trade Hound Dogs of All Types</p>
	</div> 

<div class="text-center">
<h2 class="alert"><%= alert %></h2>
<h2 class="notice"><%= notice %></h2>
</div>


	

	<div class="container">
		<%= yield %>
	</div>
	
	
	

</body>
</html>
